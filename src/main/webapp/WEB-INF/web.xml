<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ValuesServlet</servlet-name>
        <servlet-class>com.approxteam.servlets.ValuesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeValueServlet</servlet-name>
        <servlet-class>com.approxteam.servlets.ChangeValueServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValuesServlet</servlet-name>
        <url-pattern>/view/values</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeValueServlet</servlet-name>
        <url-pattern>/view/change</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>Admin View Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Aministrative Pages</web-resource-name>
            <description/>
            <url-pattern>/view/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrator</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/WEB-INF/login.jsp</form-login-page>
            <form-error-page>/WEB-INF/loginerror.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Administrator
</description>
        <role-name>Administrator</role-name>
    </security-role>
</web-app>
